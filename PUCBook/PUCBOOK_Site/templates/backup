class Usuario(models.Model):
    nome = models.CharField(max_length = 100, default = "")
    idade = models.IntegerField(default=17)
    aniversario = models.DateField(default = datetime.today())
    periodo = models.IntegerField(default=1)
    email = models.CharField(max_length = 200, default = "")
    ponto_de_encontro = models.CharField(max_length = 200,default = "")

    def __str__(self):
        return self.nome